# .env (never commit this file)
# Copy this file to .env and update with your actual credentials

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database root password (used for initial setup)
MYSQL_ROOT_PASSWORD=toor

# Application database credentials
DB_HOST=mysql
DB_NAME=amcmrp
DB_USER=amc
DB_PASSWORD=secure_password_here

# Data initialization mode: 'test' for comprehensive test data, 'minimal' for production
DATA_MODE=test

# ==============================================
# QUICKBOOKS CONFIGURATION
# ==============================================

# QuickBooks OAuth credentials
QUICKBOOKS_CLIENT_ID=your_50_char_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_40_char_client_secret_here

# QuickBooks API settings
QUICKBOOKS_SANDBOX_BASE_URL=https://sandbox-quickbooks.api.intuit.com
QUICKBOOKS_COMPANY_ID=your_company_id_here

# Backend service URL
PRODUCTION_URI=http://localhost:5002

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Flask secret key for session management (generate a random string)
FLASK_SECRET_KEY=your_flask_secret_key_change_this_in_production